# ─── Backend connection ───────────────────────────────────────
BACKEND_URL=http://localhost:4000

# ─── Runner HTTP server ───────────────────────────────────────
RUNNER_PORT=4001

# ─── Shared secret (must match backend RUNNER_SECRET) ────────
RUNNER_SECRET=syntrix-runner-secret-change-me

# ─── Playwright options ───────────────────────────────────────
# Set to "true" to watch the browser run (useful for debugging)
BROWSER_HEADLESS=true

# Max ms to wait for any single browser action
BROWSER_TIMEOUT_MS=15000

# ─── Scheduler ───────────────────────────────────────────────
# How often (ms) the scheduler checks for flows that are due
SCHEDULER_POLL_MS=10000
